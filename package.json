{
  "name": "api-blog-product",
  "version": "1.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "tsx src/server.ts",
    "build": "tsc",
    "debug": "tsx --inspect=9229 src/server.ts",
    "debug-brk": "tsx --inspect-brk=9229 src/server.ts",
    "debug:verbose": "LOG_LEVEL=debug NODE_ENV=development tsx --inspect=9229 src/server.ts",
    "lint": "tsc --noEmit",
    "security:check": "./security-test.sh",
    "logs": "DEBUG=api:* npm run dev",
    "logs:info": "LOG_LEVEL=info npm run start",
    "logs:error": "LOG_LEVEL=error npm run start",
    "serve": "npm run start",
    "clean": "rm -rf dist/ node_modules/.cache/",
    "health": "curl -s http://localhost:4444/health || echo 'Server not running'",
    "check": "npm run lint && npm run security:check",
    "restart": "pkill -f tsx || true && npm run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/tests/unit",
    "test:integration": "vitest run src/tests/integration"
  },
  "keywords": [
    "api",
    "blog",
    "nodejs",
    "typescript",
    "express",
    "prisma",
    "jwt",
    "security",
    "enterprise",
    "backend"
  ],
  "author": {
    "name": "Ronaldo Silva",
    "url": "https://github.com/ronaldo227"
  },
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "sharp": "^0.33.4",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "debug": "^4.4.1",
    "eslint-plugin-security": "^3.0.1",
    "prisma": "^6.15.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
