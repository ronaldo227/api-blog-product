  "main": "index.js",
  "scripts": {
    "dev": "tsx watch server.ts",
    "dev:modern": "tsx watch server-modern.ts",
    "start": "tsx server.ts",
    "start:modern": "tsx server-modern.ts",
    "build": "tsc",
    "build:modern": "tsc --project tsconfig.json",
    "debug": "node --inspect=9229 dist/server.js",
    "debug-brk": "node --inspect-brk=9229 dist/server.js",
    "debug-dev": "tsx --inspect=9229 server.ts",
    "debug:modern": "tsx --inspect=9229 server-modern.ts",
    "lint": "tsc --noEmit",
    "security:check": "./security-test.sh",
    "security:snyk": "snyk test",
    "security:snyk:report": "snyk test --json > reports/snyk-security-report.json",
    "security:snyk:monitor": "snyk monitor",
    "logs": "npm run logs:dev",
    "logs:dev": "DEBUG=api:* npm run dev:modern",
    "logs:info": "LOG_LEVEL=info npm run start:modern",
    "logs:error": "LOG_LEVEL=error npm run start:modern",
    "serve": "npm run start:modern",
    "clean": "rm -rf dist/ node_modules/.cache/",
    "health": "curl -s http://localhost:4444/health || echo 'Server not running'",
    "check": "npm run lint && npm run security:check",
    "restart": "pkill -f tsx || true && npm run dev:modern",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
