{
  "compilerOptions": {
    // ================================
    // CONFIGURAÇÃO LTS ESTÁVEL - TypeScript 5.9.2
    // ================================
    // Esta configuração mantém compatibilidade total até TS 7.x
    // Os avisos de deprecação são esperados e serão resolvidos na migração futura
    // Compilação e funcionalidade estão 100% operacionais
    
    "target": "ES2022",
    "module": "commonjs", 
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    
    // Strict mode para segurança de tipos
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    
    // Source maps e declarações
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Tipos customizados
    "typeRoots": ["./node_modules/@types", "./src/types"],
    
    // ================================
    // IMPORTS COM ALIAS (@/) - FUNCIONAL ATÉ TS 7.x
    // ================================
    // Nota: baseUrl será depreciado no TS 7.x, mas funciona perfeitamente na 5.x
    // Migração planejada para nova sintaxe quando necessário
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"]
    },
    "ignoreDeprecations": "5.0",
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  },
  // Configurações adicionais
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
