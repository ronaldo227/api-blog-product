# 🔒 MODERN API CONFIGURATION - Environment Variables Template
# Copy this to .env and fill with your actual values

# 🗄️ Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# 🔐 JWT Authentication (minimum 32 characters, 64+ for production)
JWT_KEY="your_super_secret_jwt_key_here_minimum_64_characters_for_production"

# 🌐 Server Configuration
NODE_ENV="development"                    # development, production, test
PORT="4444"                              # Server port

# 📊 Logging Configuration  
LOG_LEVEL="info"                         # error, warn, info, debug

# 🔒 CORS Configuration (comma separated origins)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# 🛡️ Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS="900000"            # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="50"             # Max requests per window

