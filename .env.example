# ðŸ”’ SECURITY: Environment Variables Template
# Copy this to .env and fill with your actual values

# Database Configuration
DATABASE_URL="your_secure_database_url_here"

# JWT Configuration - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_KEY="your_very_long_and_secure_jwt_secret_at_least_64_characters_long"

# Server Configuration
NODE_ENV="development"
PORT=4444

# CORS Configuration - Comma separated origins
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Logging Configuration
LOG_LEVEL="info"

# ðŸ”’ SECURITY NOTES:
# 1. Never commit .env to version control
# 2. Use different secrets for different environments
# 3. JWT_KEY should be at least 64 characters
# 4. Rotate secrets regularly
# 5. Use environment-specific values
